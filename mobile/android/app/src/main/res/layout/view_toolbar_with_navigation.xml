<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    app:cardCornerRadius="@dimen/card_view_corner_radius_tiny_x"
    app:cardElevation="@dimen/card_view_corner_radius_tiny_x">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/margin_smaller"
        android:paddingEnd="@dimen/margin_smaller">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/iBtnBack"
            android:layout_width="@dimen/toolbar_menu_size"
            android:layout_height="@dimen/toolbar_menu_size"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_smaller"
            android:layout_marginLeft="@dimen/margin_smaller"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:focusable="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_arrow_back"
            tools:ignore="VectorDrawableCompat" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/lblScreenTitle"
            style="@style/LabelMediumBlackBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/app_name" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>